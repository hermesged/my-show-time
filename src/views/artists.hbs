<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>All Artists</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-[#0b0215] text-white">
    {{> navBar }}

    <section class="py-20 my-20 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-10">All Artists</h2>

      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 justify-center max-w-6xl mx-auto"
      >
        {{#each artists}}
         {{> artistCard artist=this currentUserId=../currentUserId}}
        {{/each}}
      </div>
    </section>

    {{> footer }}
  </body>
</html>
