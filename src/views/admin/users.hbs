<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#0b0215] text-white min-h-screen flex">

 {{> asideAdmin
     }}

  <div class="flex-1 flex flex-col">
  
    <header class="flex justify-between items-center bg-[#141020] p-6 border-b border-fuchsia-700/20">
      <h2 class="text-xl font-semibold text-fuchsia-400">User Management</h2>
      <span class="font-semibold text-gray-300">admin {{currentAdmin.name}}</span>
    </header>

  
    <main class="p-8">

      {{#if message}}
      <div class="mb-4 p-3 rounded-lg bg-green-600/20 border border-green-500 text-green-400">
        {{message}}
      </div>
      {{/if}}
      {{#if errors}}
      <div class="mb-4 p-3 rounded-lg bg-red-600/20 border border-red-500 text-red-400">
        {{#each errors}}<p>{{this}}</p>{{/each}}
      </div>
      {{/if}}

      <div class="flex justify-end mb-6">
        <a href="/users/create"
          class="px-5 py-2 bg-gradient-to-r from-fuchsia-600 to-indigo-500 text-white rounded-lg shadow hover:opacity-90 transition">
          + Add User
        </a>
      </div>


      <div class="overflow-x-auto bg-[#1a122d] border border-fuchsia-700/20 rounded-xl shadow">
        <table class="w-full border-collapse">
          <thead class="bg-[#221a3d] text-gray-300 text-left">
            <tr>
              <th class="py-3 px-4">#</th>
              <th class="py-3 px-4">Name</th>
              <th class="py-3 px-4">Email</th>
              <th class="py-3 px-4">Role</th>
              <th class="py-3 px-4">Created At</th>
              <th class="py-3 px-4 text-right">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
            <tr class="border-t border-fuchsia-700/10 hover:bg-[#281d49]/40 transition">
              <td class="py-3 px-4 text-gray-400">{{@index}}</td>
              <td class="py-3 px-4 font-medium text-gray-200">{{this.name}}</td>
              <td class="py-3 px-4 text-gray-300">{{this.email}}</td>
              <td class="py-3 px-4">
               <span class="px-3 py-1 rounded-full text-sm font-medium">
                {{this.role}}
              </span>
              </td>
              <td class="py-3 px-4 text-gray-400">{{this.createdAt}}</td>
              <td class="py-3 px-4 flex justify-end gap-2">
                <!-- Edit -->
                <a href="/users/edit/{{this._id}}"
                  class="px-3 py-1.5 bg-indigo-600/70 hover:bg-indigo-500 rounded-md text-sm text-white transition">
                  Edit
                </a>
                <!-- Delete -->
                <form action="/users/admin/{{this._id}}/delete" method="POST" onsubmit="return confirm('Delete this user?');">
                  <button type="submit"
                          class="px-3 py-1.5 bg-red-600/70 hover:bg-red-500 rounded-md text-sm text-white transition">
                    Delete
                  </button>
                </form>

              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </main>
  </div>
</body>
</html>
