<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Concert Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-white flex h-screen">

  <!-- Sidebar -->
  <aside class="w-64 bg-[#0A1F44] text-white p-6 flex flex-col">
    <h1 class="text-xl font-bold mb-6">Admin Panel</h1>

    <nav class="flex flex-col gap-4">
      <a href="/admin" class="hover:bg-[#123366] p-2 rounded">Dashboard</a>
      <a href="/admin/concerts" class="hover:bg-[#123366] p-2 rounded">Concert Management</a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-8 overflow-auto">

    <!-- Header -->
    <header class="flex justify-between items-center mb-8">
      <h2 class="text-2xl font-semibold text-gray-700">Concert Management</h2>
      <a href="/concerts/new" class="bg-[#0A1F44] text-white px-4 py-2 rounded hover:bg-[#123366]">
        Add Concert
      </a>
    </header>

    <!-- Concert List -->
    <section class="space-y-4">
      {{#each concerts}}
        <div class="bg-gray-100 p-5 rounded-lg shadow flex justify-between items-center">

          <div>
            <h3 class="text-xl font-bold text-gray-800">{{title}}</h3>
            <p class="text-gray-600">{{location}} â€” {{date}}</p>
          </div>

          <div class="flex gap-2">
            <a href="/concerts/{{_id}}/edit" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700">
              Edit
            </a>

            <form action="/concerts/{{_id}}/delete" method="POST">
              <button class="bg-red-600 text-white px-4 py-1 rounded hover:bg-red-700">
                Delete
              </button>
            </form>
          </div>

        </div>
      {{/each}}
    </section>

  </main>

</body>
</html>
