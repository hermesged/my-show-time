<section class="bg-[#0b0014] text-white py-20 px-6 text-center">
  <p class="uppercase tracking-widest text-fuchsia-600 mb-3 text-sm">
    Featured Artists
  </p>

  <h2 class="text-4xl md:text-5xl font-bold mb-14">
    Meet Our Stars
  </h2>

  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 justify-center max-w-6xl mx-auto"
  >
    {{#each artists}}
      {{> artistCard artist=this currentUserId=../currentUserId}}
    {{/each}}
  </div>

  <div class="mt-14">
    <a
      href="/artists"
      class="bg-gradient-to-r from-fuchsia-700 to-indigo-700 px-8 py-3 rounded-full text-lg font-semibold shadow-md hover:scale-105 transition-transform duration-200"
    >
      Show More
    </a>
  </div>
</section>
