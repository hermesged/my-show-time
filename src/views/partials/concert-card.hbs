<div class="bg-[#141020] rounded-2xl p-6 md:p-10 flex flex-col md:flex-row w-full justify-between gap-6 mx-auto">
  <div class="flex flex-col md:flex-row gap-6 w-full">
    <img src="{{this.image}}"
         alt="Event"
         class="rounded-xl w-[280px] h-[180px] object-cover flex-shrink-0" />
    <div class="flex flex-col justify-between text-left">
      <div>
        <h3 class="text-2xl font-semibold mb-2">{{this.title}}</h3>
        <p class="text-gray-400 text-sm md:text-base mb-4">{{this.description}}</p>
      </div>
      <div class="flex items-center gap-4 text-sm text-gray-400">
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6 1a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          {{formatDate this.date}}
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2zm0 0c-4.418 0-8 1.79-8 4v2h16v-2c0-2.21-3.582-4-8-4z"/>
          </svg>
          {{this.location}}
        </div>
      </div>
    </div>
  </div>
  <a href="/concerts/{{this._id}}" class="bg-gradient-to-r from-[#A259FF] to-[#6100FF] text-white font-semibold px-8 py-3 rounded-full self-center shadow-lg hover:opacity-90 transition mt-4 md:mt-0 whitespace-nowrap">
    Buy Ticket â†’
  </a>
</div>
