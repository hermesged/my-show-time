<section class="relative bg-[#0b0215] text-white overflow-hidden py-32 px-8 md:px-16 lg:px-24">
  <div class="max-w-7xl mx-auto flex flex-col-reverse md:flex-row items-center justify-between gap-16">
    
    <div class="flex-1 space-y-8 text-center md:text-left">
      <h4 class="text-fuchsia-500 font-semibold tracking-wide text-lg">{{subtitle}}</h4>

      <h1 class="text-4xl md:text-6xl font-extrabold leading-tight">{{{title}}}</h1>

      <p class="text-gray-300 max-w-xl mx-auto md:mx-0">{{description}}</p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
        <a href="{{buttonLink}}" class="px-8 py-3 bg-gradient-to-r from-fuchsia-600 to-indigo-500 hover:opacity-90 rounded-full font-medium transition">
          {{buttonText}}
        </a>

        {{#if secondaryButtonText}}
        <a href="{{secondaryButtonLink}}" class="px-8 py-3 border border-gray-500 hover:border-fuchsia-500 rounded-full font-medium transition">
          {{secondaryButtonText}}
        </a>
        {{/if}}
      </div>
    </div>

    <div class="flex-1 flex justify-center md:justify-end">
      <div class="relative w-full max-w-md aspect-square">
        <img src="{{imageUrl}}" alt="{{imageAlt}}" class="w-full h-full object-cover rounded-3xl shadow-2xl" />
        <div class="absolute inset-0 bg-gradient-to-t from-[#0b0215]/70 to-transparent rounded-3xl"></div>
      </div>
    </div>
  </div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-fuchsia-700/20 rounded-full blur-3xl pointer-events-none"></div>
</section>